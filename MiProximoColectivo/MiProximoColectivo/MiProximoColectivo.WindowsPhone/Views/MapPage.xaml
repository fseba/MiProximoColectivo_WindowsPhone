<viewsBase:PageBase
    x:Class="MiProximoColectivo.Views.MapPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MiProximoColectivo.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewsBase="using:MiProximoColectivo.Views.Base"
    xmlns:Maps="using:Windows.UI.Xaml.Controls.Maps" 
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding Source={StaticResource Locator}, Path=MapPageViewModel}"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="300"/>
        </Grid.RowDefinitions>
        <Grid Row="0">
            <Maps:MapControl 
                    x:Name="myMapControl" 
                    MapServiceToken="{StaticResource MapServiceTokenString}"
                    Width="400"
                    Height="auto"
                    HorizontalAlignment="Center"/>
        </Grid>
        <Grid Row="1" Background="DodgerBlue">
            <Pivot>
                <PivotItem Header="cerca de" DataContext="{Binding NearFromViewModel}">
                     
                </PivotItem>
                <PivotItem Header="como llegar" DataContext="{Binding HowToArriveViewModel}">

                </PivotItem>
                <PivotItem Header="ver recorrido" DataContext="{Binding ViewTrackViewModel}">

                </PivotItem>
            </Pivot>
        </Grid>
    </Grid>

    <Page.BottomAppBar>
        <CommandBar Background="DodgerBlue" RequestedTheme="Dark" ClosedDisplayMode="Compact">
            <CommandBar.PrimaryCommands>
                <AppBarButton Label="ocultar menu" Icon="Sort"/>
                <AppBarButton Label="centrar mapa" Icon="MapPin" />
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>

</viewsBase:PageBase>
